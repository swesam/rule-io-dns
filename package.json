{
  "name": "rule-io-dns",
  "version": "0.1.0",
  "description": "DNS validation and record generation for Rule.io email setup",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cloudflare": {
      "types": "./dist/providers/cloudflare.d.ts",
      "import": "./dist/providers/cloudflare.mjs",
      "require": "./dist/providers/cloudflare.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rule.io",
    "dns",
    "email",
    "spf",
    "dkim",
    "dmarc",
    "mx"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swesam/rule-io-dns.git"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
