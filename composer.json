{
    "name": "rule-io/dns",
    "description": "DNS validation, record generation, and auto-provisioning for Rule.io email setup",
    "type": "library",
    "license": "MIT",
    "keywords": ["dns", "email", "dkim", "spf", "dmarc", "cloudflare", "provisioning"],
    "authors": [
        {"name": "Sam"}
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RuleIo\\Dns\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RuleIo\\Dns\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest"
    },
    "minimum-stability": "stable"
}
